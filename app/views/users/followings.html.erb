<h2>Follow Users<h2>


<% if @users.blank? %>
<h4>ユーザーはいません</h4>
<% else %>

<table class='table'>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

    <% @users.each do |user| %>
      <tbody>
      <tr>
        <td><%= image_tag user.get_profile_image, size: '50x50' %></td>
        <td><%= user.name %></td>
        <td><p>フォロー数：<%= user.followings.count %></p></td>
        <td><p>フォロワー数：<%= user.followers.count %></p></td>

        <td><%= link_to 'Show', user %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<% end %>